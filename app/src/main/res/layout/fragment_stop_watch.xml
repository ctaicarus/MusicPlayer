<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controll_alarm.globalTime">

    <LinearLayout
        android:id="@+id/lnSW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/edHour"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="HH"
            android:textSize="30dp"
            android:textStyle="bold"
            android:maxLength="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edMin"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="mm"
            android:textSize="30dp"
            android:textStyle="bold"
            android:maxLength="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="30dp"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/edSec"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="ss"
            android:textSize="30dp"
            android:textStyle="bold"
            android:maxLength="2"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/boder_button"
        android:text="Bắt đầu"
        android:layout_below="@+id/lnSW"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/stopWatchTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text=""
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stopWatchTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/btnDel"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/boder_button"
            android:text="Xóa"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/boder_button"
            android:text="Sửa"
            android:backgroundTint="#FF3333"
            android:backgroundTintMode="add"
            android:visibility="invisible"/>
    </LinearLayout>
</RelativeLayout>